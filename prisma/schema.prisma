datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
}

model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  rank  String @default("person")
  comments  String[] 
  posts String[]
}

model Comment {
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  text  String
  date DateTime @default(now())
  userId String @db.ObjectId
}

model Post {
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  title String
  url String
  date DateTime @default(now())
  userId String @db.ObjectId
}